{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "SPDX-License-Identifier: CC-BY-4.0; Copyright (c) 2026 Brenn Hill",
  "$id": "https://stricture.dev/schemas/lineage-system-registry.schema.json",
  "title": "Stricture Lineage System Registry",
  "type": "object",
  "required": ["systems"],
  "properties": {
    "strict:flows": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "level"],
        "properties": {
          "id": { "type": "string", "pattern": "^[a-z][a-z0-9_-]{1,63}$" },
          "name": { "type": "string", "minLength": 1 },
          "level": { "type": "integer", "minimum": 0 },
          "owner": { "type": "string", "minLength": 1 },
          "business_risk": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]{1,63}$",
            "description": "Organization-defined risk code token (for example order_loss)."
          }
        },
        "additionalProperties": false
      }
    },
    "systems": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name", "owner_team"],
        "properties": {
          "id": { "type": "string", "pattern": "^[A-Za-z][A-Za-z0-9_-]{0,63}(:[A-Za-z][A-Za-z0-9_-]{0,63})?$" },
          "name": { "type": "string", "minLength": 1 },
          "owner_team": { "type": "string", "minLength": 1 },
          "runbook_url": { "type": "string", "format": "uri" },
          "doc_root": { "type": "string", "format": "uri" },
          "flows": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true
          },
          "escalation": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "role": { "type": "string", "minLength": 1 },
                "name": { "type": "string", "minLength": 1 },
                "channel": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    }
  }
}
