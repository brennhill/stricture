{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$comment": "SPDX-License-Identifier: CC-BY-4.0; Copyright (c) 2026 Brenn Hill",
  "$id": "https://stricture.dev/schemas/lineage-policy-pack.schema.json",
  "title": "Stricture Lineage Policy Pack",
  "type": "object",
  "required": ["schema_version", "policy_id", "lineage"],
  "properties": {
    "schema_version": {
      "type": "integer",
      "enum": [1]
    },
    "policy_id": {
      "type": "string",
      "minLength": 1
    },
    "extends": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    },
    "lineage": {
      "type": "object",
      "properties": {
        "require": {
          "type": "object",
          "properties": {
            "field_keys": { "$ref": "#/$defs/stringArray" },
            "source_query_keys": { "$ref": "#/$defs/stringArray" },
            "system_registry_keys": { "$ref": "#/$defs/stringArray" },
            "override_keys": { "$ref": "#/$defs/stringArray" }
          },
          "additionalProperties": false
        },
        "defaults": {
          "type": "object",
          "additionalProperties": {
            "type": ["string", "number", "boolean"]
          }
        },
        "severity_overrides": {
          "type": "object",
          "additionalProperties": {
            "type": "string",
            "enum": ["high", "medium", "low", "info"]
          }
        },
        "findings": {
          "type": "object",
          "default": {
            "require_downstream_impact": true,
            "unknown_impact_severity": "low",
            "self_only": {
              "emit_finding": false,
              "publish_change_event": true
            },
            "flow_criticality": {
              "enabled": false,
              "level_direction": "lower_is_more_critical",
              "fail_on_level": null,
              "severity_by_level": {},
              "require_service_membership": false,
              "critical_flow_ids": [],
              "critical_flow_block_reason": ""
            }
          },
          "properties": {
            "require_downstream_impact": { "type": "boolean", "default": true },
            "unknown_impact_severity": {
              "type": "string",
              "enum": ["high", "medium", "low", "info"],
              "default": "low"
            },
            "self_only": {
              "type": "object",
              "default": {
                "emit_finding": false,
                "publish_change_event": true
              },
              "properties": {
                "emit_finding": { "type": "boolean", "default": false },
                "severity": {
                  "type": "string",
                  "enum": ["high", "medium", "low", "info"]
                },
                "publish_change_event": { "type": "boolean", "default": true }
              },
              "additionalProperties": false
            },
            "flow_criticality": {
              "type": "object",
              "default": {
                "enabled": false,
                "level_direction": "lower_is_more_critical",
                "fail_on_level": null,
                "severity_by_level": {},
                "require_service_membership": false,
                "critical_flow_ids": [],
                "critical_flow_block_reason": ""
              },
              "properties": {
                "enabled": { "type": "boolean", "default": false },
                "level_direction": {
                  "type": "string",
                  "enum": ["lower_is_more_critical", "higher_is_more_critical"],
                  "default": "lower_is_more_critical"
                },
                "fail_on_level": {
                  "type": ["integer", "null"],
                  "minimum": 0
                },
                "severity_by_level": {
                  "type": "object",
                  "propertyNames": {
                    "pattern": "^[0-9]+$"
                  },
                  "additionalProperties": {
                    "type": "string",
                    "enum": ["high", "medium", "low", "info"]
                  },
                  "default": {}
                },
                "require_service_membership": { "type": "boolean", "default": false },
                "critical_flow_ids": {
                  "type": "array",
                  "items": { "type": "string", "minLength": 1 },
                  "default": []
                },
                "critical_flow_block_reason": {
                  "type": "string",
                  "default": ""
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "profiles": {
          "type": "object",
          "additionalProperties": {
            "type": "object"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false,
  "$defs": {
    "stringArray": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 }
    }
  }
}
