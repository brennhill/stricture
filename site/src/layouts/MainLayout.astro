---
import "../styles/global.css";

const {
  title = "Stricture",
  description = "Stricture verifies API lineage, drift, and escalation paths before deployment."
} = Astro.props;
const siteBase = "https://stricture-lint.com";
const canonicalUrl = new URL(Astro.url.pathname, siteBase).toString();
const markdownPath = Astro.url.pathname.endsWith("/") ? `${Astro.url.pathname}index.md` : `${Astro.url.pathname}/index.md`;
const markdownUrl = new URL(markdownPath, siteBase).toString();
const socialImageUrl = new URL("/og/stricture-social-card.png", siteBase).toString();
const socialImageAlt = "Stricture hexagon logo with STRICTURE wordmark and the tagline: Catch API drift before customers do.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <meta name="robots" content="index,follow" />
    <meta name="content-signal" content="ai-train=yes, search=yes, ai-input=yes" />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" type="text/markdown" href={markdownUrl} />
    <meta property="og:site_name" content="Stricture" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={socialImageUrl} />
    <meta property="og:image:secure_url" content={socialImageUrl} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={socialImageAlt} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageUrl} />
    <meta name="twitter:image:alt" content={socialImageAlt} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <a class="brand" href="/" aria-label="Stricture home">
        <span class="brand-mark" aria-hidden="true">
          <svg viewBox="0 0 64 64" role="img" aria-hidden="true" focusable="false">
            <defs>
              <linearGradient id="strictureMark" x1="0%" y1="0%" x2="100%" y2="100%">
                <stop offset="0%" stop-color="#0b6e5f"></stop>
                <stop offset="100%" stop-color="#e25a2c"></stop>
              </linearGradient>
            </defs>
            <path
              fill="url(#strictureMark)"
              d="M32 3 56 17v30L32 61 8 47V17L32 3Zm0 8.8L15.6 21v22L32 52.2 48.4 43V21L32 11.8Z"
            ></path>
            <path
              fill="#fffaf3"
              d="M19.8 39.2 26.3 33a10.6 10.6 0 0 1 3.5-2.2l8.5-2.9a2 2 0 0 0 1.2-2.6 2 2 0 0 0-2.5-1.2l-8.6 2.9a14.7 14.7 0 0 0-4.8 3l-6.6 6.3a2 2 0 1 0 2.8 2.9Zm24.4-14.4a2 2 0 0 0-2.8 0L34.8 31a10.6 10.6 0 0 1-3.5 2.2l-8.6 2.9a2 2 0 0 0 1.3 3.8l8.6-2.9a14.7 14.7 0 0 0 4.8-3l6.8-6.4a2 2 0 0 0 0-2.8Z"
            ></path>
          </svg>
        </span>
        <span class="brand-word">Stricture</span>
      </a>
      <nav>
        <a href="/what-is-stricture">What Is Stricture</a>
        <a href="/with-ai">With AI</a>
        <a href="/guard-your-architecture">Architecture</a>
        <a href="/architecture-invariants">Invariants</a>
        <a href="/walkthrough">Walkthrough</a>
        <a href="/when-to-use-stricture">Comparisons</a>
        <a href="/examples">Examples</a>
        <a href="/demo">Live Demo</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <p>Lineage an Architecture aware linting and release gates for API ecosystems.</p>
      <p><a href="/when-to-use-stricture">Tool Comparison</a></p>
      <p>
        <a href="/open-standard">Open Standard</a>
        路
        <a href="https://github.com/brennhill/stricture/blob/main/spec/0.1-draft.md" target="_blank" rel="noopener noreferrer">Spec Draft</a>
        路
        <a href="/docs">Docs</a>
        路
        <a href="/getting-started">Getting Started</a>
        路
        <a href="/annotations">Annotation Guide + Index</a>
      </p>
      <p>
        &copy; 2026
        <a href="https://www.linkedin.com/in/brennhill/" target="_blank" rel="noopener noreferrer">Brenn Hill</a>
      </p>
    </footer>
  </body>
</html>
